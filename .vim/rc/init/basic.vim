" setting
set fenc=utf-8
set encoding=utf-8
set showcmd

" display
set number
set cursorline
set laststatus=2
set noautoindent
set nocindent
set nosmartindent
set virtualedit=onemore
set showmatch
set wildmode=list:longest
syntax enable

" tab/space
set list
set tabstop=2
set expandtab
set shiftwidth=2

" find
set ignorecase
set smartcase
set incsearch
set wrapscan
set hlsearch
